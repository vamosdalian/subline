{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./out",
    "declaration": true,
    "sourceMap": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": [
    "src/renderer/src/**/*",
    "src/shared/**/*"
  ]
}
